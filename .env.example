# Application Configuration
APP_NAME="Personal Finance ML Backend"
APP_VERSION="2.0.0"
DEBUG=false
ENVIRONMENT=production  # development, staging, production

# API Configuration
API_V1_PREFIX=/api/v1

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost/personal_finance
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# Redis Cache Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
CACHE_ENABLED=true
CACHE_TTL_SECONDS=86400

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Security Configuration
SECRET_KEY=change-this-secret-key-in-production
API_KEY_HEADER=X-API-Key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=3600

# Model Configuration
MIN_TRAINING_MONTHS=3
MAX_TRAINING_MONTHS=24
CONFIDENCE_LEVEL=0.95
MODEL_SAVE_DIR=./models/saved

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090

# Logging Configuration
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # json or text
LOG_FILE=

# Feature Flags
ENABLE_ADVANCED_FORECASTING=true
ENABLE_GOAL_PLANNING=true
ENABLE_BUDGET_OPTIMIZER=true
ENABLE_RECOMMENDATIONS=true
ENABLE_CASHFLOW_PREDICTOR=false
ENABLE_DEBT_OPTIMIZER=false
ENABLE_INVESTMENT_ANALYZER=false
